{
    "if": {
        "prefix": "if",
        "body": [
            "if ${1:expr1}",
            "\t$0",
            "endif"
        ],
        "description": "if statement"
    },
    "ife": {
        "prefix": "ife",
        "body": [
            "if ${1:expr1}",
            "\t$2",
            "else",
            "\t$0",
            "endif"
        ],
        "description": "if statement"
    },
    "for": {
        "prefix": "for",
        "body": [
            "for ${1:var} in ${2:object}",
            "\t$0",
            "endfor"
        ],
        "description": "for statement"
    },
    "while": {
        "prefix": "while",
        "body": [
            "while ${1:expr1} ",
            "\t$0",
            "endwhile"
        ],
        "description": "while statement"
    },
    "try": {
        "prefix": "try",
        "body": [
            "try ",
            "\t$0",
            "endtry"
        ],
        "description": "try statement"
    },
    "conform formatter args": {
        "prefix": "conform-args",
        "description": "config conform formatter args",
        "body": "let g:conform_args_${1:formatter}=[$2]"
    },
    "conform disable formatter for filetype": {
        "prefix": "conform-disable",
        "description": "disable formatter for filetype",
        "body": "let g:conform_disable_${1:ft}=1"
    },
    "conform formmater": {
        "prefix": "conform-formatter",
        "description": "config conform formatter",
        "body": [
            "let g:conform_auto_formatters_${1:ft}=$2",
            "let g:conform_manual_formatters_${1:ft}=$2"
        ]
    }
}
