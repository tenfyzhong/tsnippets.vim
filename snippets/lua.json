{
  "vim plugin": {
    "prefix": "vimp",
    "body": [
      "local ${1:name} = {",
      "    '${2:url}',",
      "    config = function()",
      "        $0",
      "    end,",
      "    event = 'VeryLazy',",
      "}",
      "",
      "return { $1 }"
    ],
    "description": "vim plugin"
  },
  "conform formatter args": {
    "prefix": "conform-args",
    "description": "config conform formatter args",
    "body": "vim.g.conform_args_${1:formatter} = {$2}"
  },
  "conform disable formatter for filetype": {
    "prefix": "conform-disable",
    "description": "disable formatter for filetype",
    "body": "vim.g.conform_disable_${1:ft} = 1"
  },
  "conform formmater": {
    "prefix": "conform-formatter",
    "description": "config conform formatter",
    "body": [
      "vim.g.conform_auto_formatters_${1:ft} = {$2}",
      "vim.g.conform_manual_formatters_${1:ft} = {$3}"
    ]
  }
}
